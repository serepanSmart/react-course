{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": false,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}